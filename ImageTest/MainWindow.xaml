<Window x:Class="ImageTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="40" Padding="10" Name="btnAddImage"  Background="BurlyWood" Click="btnAddImage_Click">Add Image
            </Button>
            <Label Margin="5" Padding="5" HorizontalAlignment="Center"> Take name for image for add to folder
            </Label>
            <TextBox Margin="5" Padding="5" Name="tbImageName">
            </TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Image Name="ImageBox"  Margin="60" VerticalAlignment="Center" HorizontalAlignment="Center" MaxHeight="300" MaxWidth="300" Source = "Image/image.jpg">
            </Image>
        </StackPanel>
    </Grid>
</Window> 
